                            <li class="nav-item">
                                <a class="nav-link" asp-controller="" asp-action="">
                                    <i class="fas fa-shopping-cart"></i>
                                </a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
